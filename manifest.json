{
	"manifest_version": 2,
	"name": "Youtube Unshorten",
	"version": "1.0",
	"description": "redirects yotube shorts to regular player",
	"icons": {
		"48": "icons/noshort-48.png",
		"96": "icons/noshort-96.png"
	},
	"permissions": [
		"storage"
	],
	"content_scripts": [
		{
			"matches": [
				"*://*.youtube.com/shorts/*"
			],
			"js": [
				"unshorten.js"
			]
		}
	],
	"background": {
		"scripts": [
			"background.js"
		]
	},
	"browser_action": {
		"default_icon": {
			"19": "icons/noshort-19.png",
			"38": "icons/noshort-38.png"
		},
		"default_title": "Unshorten Youtube"
	}
}
